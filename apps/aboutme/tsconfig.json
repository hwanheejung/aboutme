{
  "extends": "@aboutme/typescript-config/nextjs.json",
  "compilerOptions": {
    "skipLibCheck": true,

    "esModuleInterop": true,

    "moduleResolution": "bundler",

    "isolatedModules": true,

    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "public/*": ["./public/*"],
      "contents/*": ["./contents/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.mjs"
  ],
  "exclude": ["node_modules"]
}
